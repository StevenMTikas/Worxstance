rules_version = '2';

// Enforce security policies across the entire database
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is signed in and if their UID
    // matches the {userId} wildcard in the path.
    function isAuthenticatedOwner(userId) {
      // 1. Check if the request is authenticated (request.auth is not null)
      return request.auth != null
          // 2. Check if the authenticated user's ID matches the path's userId
          && request.auth.uid == userId;
    }

    // --- MAIN PRIVATE DATA RULE ---
    // This rule covers ALL private, user-specific data for all 9 applications.
    // Path structure: /artifacts/{appId}/users/{userId}/{collectionName}/{documentId}
    // This protects:
    // - master_profiles
    // - job_discovery_list
    // - networking_tracker
    // - star_stories
    // - mock_sessions
    // - offers_tracker, etc.
    match /artifacts/{appId}/users/{userId}/{collectionName}/{documentId} {
      // Allow read (get, list) and write (create, update, delete) operations
      // ONLY if the authenticated user's ID matches the {userId} in the path.
      allow read, write: if isAuthenticatedOwner(userId);
    }

    // --- DENY ALL OTHER ACCESS ---
    // Deny all reads/writes to any collection or document path that doesn't
    // match the explicit rules above. This acts as a final security catch-all.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

